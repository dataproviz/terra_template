# terraform.tfvars.example
# Example configuration for category-based S3 folder structure

# Define categories with their S3 buckets (raw, staging, curated)
categories = {
  alpha = {
    raw_bucket     = "company-alpha-raw"
    staging_bucket = "company-alpha-staging"
    curated_bucket = "company-alpha-curated"
    description    = "Alpha category for enterprise clients"
  }
  beta = {
    raw_bucket     = "company-beta-raw"
    staging_bucket = "company-beta-staging"
    curated_bucket = "company-beta-curated"
    description    = "Beta category for standard clients"
  }
  gamma = {
    raw_bucket     = "company-gamma-raw"
    staging_bucket = "company-gamma-staging"
    curated_bucket = "company-gamma-curated"
    description    = "Gamma category for development/testing"
  }
}

# Define tenants with their category, business unit, and bucket type assignments
# Each tenant can specify which business units AND which bucket types they need
tenants = {
  tenant1 = {
    tenant_name    = "tenant1"
    category       = "alpha"  # Enterprise client
    business_units = ["BusinessDEV", "BusinessQA"]  # Both DEV and QA
    bucket_types   = ["raw", "staging", "curated"]  # All three buckets (full pipeline)
    active         = true
  }
  tenant2 = {
    tenant_name    = "tenant2"
    category       = "beta"   # Standard client
    business_units = ["BusinessDEV", "BusinessQA"]  # Both DEV and QA
    bucket_types   = ["raw", "curated"]  # No staging (direct raw-to-curated)
    active         = true
  }
  tenant3 = {
    tenant_name    = "tenant3"
    category       = "beta"   # Standard client - minimal setup
    business_units = ["BusinessDEV"]  # Only DEV
    bucket_types   = ["raw"]  # Only raw bucket (no processing)
    active         = true
  }
  tenant4 = {
    tenant_name    = "tenant4"
    category       = "gamma"  # Development/testing
    business_units = ["BusinessQA"]  # Only QA
    bucket_types   = ["raw", "staging"]  # Raw and staging for testing
    active         = true
  }
  tenant5 = {
    tenant_name    = "tenant5"
    category       = "gamma"  # Development/testing
    business_units = ["BusinessDEV", "BusinessQA"]  # Both
    bucket_types   = ["curated"]  # Only curated (reads from shared staging)
    active         = true
  }
}

# AWS Configuration
aws_region = "us-east-1"

# Common tags applied to all S3 objects
common_tags = {
  ManagedBy   = "Terraform"
  Environment = "Production"
  Project     = "Multi-Tenant-Data-Platform"
}


